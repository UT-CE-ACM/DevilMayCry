<% include ../partials/header %>
    <div class="row">
        <h1 style="text-align: center">Create a New Puzzle</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/problems" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="description" placeholder="description">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
                <label class="btn btn-default btn-primary">
                    <span class="glyphicon"></span> files<input
                            name='file' type="file" style="display: none;" multiple>
                </label>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
<% include ../partials/footer %>

