                <div class="form-group">
                    <button class="btn btn-lg btn-warning btn-block">تنظیم محدد گذرواژه</button>
                </div>
            </form>
            <a class="btn btn-primary" href="/login">بازگشت</a>
        </div>
    </div>
</div>
<% include partials/footer %>
<% include partials/formvalidation %>
</body>
