<!DOCTYPE html>
<html lang="fa-ir">
<head>
    <title>شکار معما</title>
    <% include ../partials/head %>
    <!-- ===============    dashboard core CSS     =============== -->
    <link rel="stylesheet" type="text/css" href="/dashboard/dashboard.css" media="all" />
</head>
<body>
<% include ../partials/header %>
<div class="backch">
    <div class="jumbotron">
        <div class="container">
            <div class="row">
                <div class="col-md-6 text-left">
                    <h1><span class="glyphicon "></span>معما ها</h1>
                </div>

                <div class="col-md-3" >

                </div>
                <div class="col-md-3" style="text-align: right;padding-top: 10px;">
                    <button type="button" class="btn btn-primary btn-lg btn-block btncolor">
                        <% if(user.group){ %>
                            <a style="text-decoration: none;color: #ffffff;" href="javascript: void();"><%= user.group.name%></a>
                        <% } else { %><a>شما گروهی ندارید</a> <% } %>
                    </button>
                    <a style="text-decoration: none;" href="/dashboard/ranking"><button  type="button" class="btn btn-info btn-lg btn-block">امتیاز گروه ها</button></a>
                </div>
            </div>
        </div>
    </div>
    <div class="problem-cont" id="puzzles_list">
        <input class="search" />
        <ul class="taglist">
            <li><a href="javascript: void();">همه</a></li>
            <% if(tags){tags.forEach(function(tag){ %>
            <li><a href="javascript: void();"><%= tag%></a></li>
            <%});}%>
        </ul>
        <ul class="list row" style="list-style-type: none;">
        <% if(puzzles){puzzles.forEach(function(puzzle){ %>
        <li>
        <div class="col-md-3 col-sm-6 col-md-12" >
            <div class="eachproblem">
            <div class="problembod">
                <div class="caption topproblem">
                    <h1 class="problemname"><%= puzzle.name %></h1>
                </div>
                <div class="tags">
                <%puzzle.problem.tags.forEach(function (tag) {%>
                    <div class="tag"><%=tag%></div>
                <%})%>
                </div>
            <p>
                <%if(puzzle.accepted){%>
                <a href="/dashboard/puzzles/<%= puzzle._id %>" class="btn btn-success mainbtn">حل شده است</a>
                <%}else if(puzzle.rejected){%>
                <a href="/dashboard/puzzles/<%= puzzle._id %>" class="btn btn-danger mainbtn">رد شده است</a>
                <%}else if(puzzle.submitted){%>
                <a href="/dashboard/puzzles/<%= puzzle._id %>" class="btn btn-warning mainbtn">ثبت شده است</a>
                <%}else if(puzzle.sold) {%>
                <a href="/dashboard/puzzles/<%= puzzle._id %>" class="btn btn-info mainbtn">مشاهده</a>
                <%}else  {%>
                <a href="/dashboard/puzzles/<%= puzzle._id %>" class="btn btn-primary mainbtn">خرید</a>
                <%}%>
            </p>
        </div>
        </div>
        </li>
        <% });} %>
        </ul>
    </div>
</div>
<script src="//cdnjs.cloudflare.com/ajax/libs/list.js/1.3.0/list.min.js"></script>
<script src="/scripts/problist.js"></script>
<% include ../partials/footer %>
</body>
</html>