<!DOCTYPE html>
<html lang="fa-ir">
<head>
    <title>شکار معما</title>
    <% include ../partials/head %>
    <!-- ===============    dashboard core CSS     =============== -->
    <link rel="stylesheet" type="text/css" href="/dashboard/dashboard.css" media="all" />
</head>
<body>
<% include ../partials/header %>
<div class="backch">
    <div class="jumbotron">
        <div class="container">
            <div class="row">
                <div class="col-md-6 text-left">
                    <h1><span class="glyphicon "></span>معما ها</h1>
                </div>

                <div class="col-md-3" >

                </div>
                <div class="col-md-3" style="text-align: right;padding-top: 10px;">
                    <button type="button" class="btn btn-success btn-lg btn-block btncolor">
                        <% if(user.group){ %>
                            <a style="text-decoration: none;color: #ffffff;" href="#"><%= user.group.name%></a>
                        <% } else { %><a>شما گروهی ندارید</a> <% } %>
                    </button>
                    <a style="text-decoration: none;" href="/dashboard/ranking"><button  type="button" class="btn btn-default btn-lg btn-block">امتیاز گروه ها</button></a>
                </div>
            </div>
        </div>
    </div>
    <div class="row problem-cont" id="puzzles_list">
        <input class="search" />
        <ul class="taglist">
            <li><a href="javascript: void();">همه</a></li>
            <li><a href="javascript: void();">tag2</a></li>
        </ul>
        <ul class="list" style="list-style-type: none;">
        <% if(puzzles){puzzles.forEach(function(puzzle){ %>
        <li>
        <div class="eachproblem col-md-3 " >
            <div class="problembod">
                <div class="caption topproblem">
                    <h1 class="problemname"><%= puzzle.name %></h1>
                </div>
                <%puzzle.problem.tags.forEach(function (tag) {%>
                    <div class="tag"><%=tag%></div>
                <%})%>
            <p>
                <%if(puzzle.accepted){%>
                <a href="/dashboard/puzzles/<%= puzzle._id %>" class="btn btn-success">حل شده است</a>
                <%}else if(puzzle.rejected){%>
                <a href="/dashboard/puzzles/<%= puzzle._id %>" class="btn btn-danger">رد شده است</a>
                <%}else if(puzzle.submitted){%>
                <a href="/dashboard/puzzles/<%= puzzle._id %>" class="btn btn-warning">ثبت شده است</a>
                <%}else if(puzzle.sold) {%>
                <a href="/dashboard/puzzles/<%= puzzle._id %>" class="btn btn-warning">مشاهده</a>
                <%}else  {%>
                <a href="/dashboard/puzzles/<%= puzzle._id %>" class="btn btn-warning">خرید</a>
                <%}%>
            </p>
        </div>
        </div>
        </li>
        <% });} %>
        </ul>
    </div>
    <div class="row nextstage">
        <div class="container">
            <div class="col-md-3">
                <%if(canGoToNextStage){%>
                    <a href="/dashboard/nextstage" class="btn btn-success btn-default btn-lg btn-block btnxt" >(:  مرحله بعد  </a>
                <%}%>
            </div>
        </div>
    </div>
</div>
<script src="//cdnjs.cloudflare.com/ajax/libs/list.js/1.3.0/list.min.js"></script>
<script src="/scripts/problist.js"></script>
<% include ../partials/footer %>
</body>
</html>