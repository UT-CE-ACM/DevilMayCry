<!DOCTYPE html>
<html lang="fa-ir">
<head>
    <title>شکار معما</title>
    <% include ../partials/head %>
    <link rel="stylesheet" type="text/css" href="/dashboard/dashboard.css" media="all" />
</head>
<body>
<% include ../partials/header %>
<div class="backch">
    <div class="jumbotron">
        <div class="container">
            <div class="row">
                <div class="col-md-6 text-left">
                    <h1><span class="glyphicon glyphicon-pencil"></span> معماها</h1>
                </div>

                <div class="col-md-3" >

                </div>
                <div class="col-md-3" style="text-align: right;padding-top: 10px;">
                    <button type="button" class="btn btn-primary btn-lg btn-block btncolor <% if(!user.group){ %> disabled <%}%>" style="cursor: default;">
                        <% if(user.group){ %>
                            <%= user.group.name%>
                        <% } else { %><a>شما گروهی ندارید.</a> <% } %>
                    </button>
                    <a style="text-decoration: none;" href="/dashboard/ranking"><button  type="button" class="btn btn-info btn-lg btn-block">امتیاز گروه ها</button></a>
                </div>
            </div>
        </div>
    </div>
    <div class="problem-cont" id="puzzles_list">
        <input class="search" placeholder="&#xe003;" type="text" />
        <ul class="taglist">
            <span class="glyphicon glyphicon-tags" style="transform:rotateY(180deg);"></span>
            <li><a class="btn btn-primary btn-sm active" href="javascript: void();">همه</a></li>
            <% if(superTags){superTags.forEach(function(superTag){ %>
            <li style="padding-left: 6px;"><a class="btn btn-danger btn-sm disabled" href="javascript: void();"><%= superTag.title%></a></li><ul style="display: inline; padding: 0;">
            <% superTag.tags.forEach(function(tag){ %>
            <li><a class="btn btn-success btn-xs" href="javascript: void();"><%= tag%></a></li>
            <%});%>
            </ul>
            <%});}%>
        </ul>
        <ul class="list row" style="list-style-type: none;">
        <% if(puzzles){puzzles.forEach(function(puzzle){ %>
        <li>
        <div class="col-md-3 col-sm-6 col-md-12" >
            <div class="eachproblem">
            <div class="problembod">
                <div class="caption topproblem">
                    <h1 class="problemname"><%= puzzle.name %></h1>
                </div>
                <div class="tags">
                <%puzzle.problem.tags.forEach(function (tag) {%>
                    <div class="tag"><i class="glyphicon glyphicon-tag" style="transform:rotateY(180deg); vertical-align: middle;"></i> <%=tag%></div>
                <%})%>
                </div>
            <p>
                <%if(puzzle.accepted){%>
                <a href="/dashboard/puzzles/<%= puzzle._id %>" class="btn btn-success mainbtn">حل‌شده</a>
                <%}else if(puzzle.rejected){%>
                <a href="/dashboard/puzzles/<%= puzzle._id %>" class="btn btn-danger mainbtn">ردشده</a>
                <%}else if(puzzle.submitted){%>
                <a href="/dashboard/puzzles/<%= puzzle._id %>" class="btn btn-warning mainbtn">ثبت‌شده</a>
                <%}else if(puzzle.sold) {%>
                <a href="/dashboard/puzzles/<%= puzzle._id %>" class="btn btn-info mainbtn">مشاهده</a>
                <%}else  {%>
                <a href="/dashboard/puzzles/<%= puzzle._id %>" class="btn btn-primary mainbtn">خرید</a>
                <%}%>
            </p>
        </div>
        </div>
        </li>
        <% });} %>
        </ul>
    </div>
</div>
<script src="/listjs/list.min.js"></script>
<script src="/scripts/problist.js"></script>
<% include ../partials/footer %>
</body>
</html>