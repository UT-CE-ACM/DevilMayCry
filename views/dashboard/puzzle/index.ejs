<!DOCTYPE html>
<html lang="fa-ir">
<head>
    <title>شکار معما</title>
    <% include ../../partials/head %>
</head>
<body>
<% include ../../partials/header %>
<div class="jumbotron">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h1><span class="glyphicon glyphicon-tent"></span>Puzzles</h1>
            </div>
            <div class="col-md-6" style="padding-top: 20px;">
                <a class="btn btn-primary btn-lg btn-block" href="/admin/problems/new">Add New Puzzles</a>
            </div>
        </div>
    </div>
</div>
     
     <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% problems.forEach(function(problem){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                   <div class="caption">
                       <h4><%= problem.name %></h4>
                   </div>
                   <p>
                       <a href="/admin/problems/<%= problem._id %>" class="btn btn-primary">More Info</a>
                   </p>
                </div>
            </div>
        <% }); %>
    </div>
  <% include ../../partials/footer %>
</body>
</html>