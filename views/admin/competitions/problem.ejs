</div>

<div class="row text-center" style="display:flex; flex-wrap: wrap;margin-left: 10px;">
    <% puzzles.forEach(function(puzzle){ %>
        <%if(puzzle.submisson.file){%>
            <div class="col-md-3 col-xs-12">
                <div class="thumbnail">
                    <div class="caption">
                            <h4><%= puzzle.group.name %></h4>
                    </div>
                    <p>
                        <a href="/admin/competition/puzzles/<%= puzzle._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <%}%>
    <%});%>
</div>

</body>