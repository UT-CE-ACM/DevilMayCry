<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta name="description" content="Responsive Coming soon Template">
    <meta name="keywords" content="Coming soon template, Bootstrap template, Coming soon, Responsive coming soon Template, Under Construction, countdown , Mailchimp, Youtube Video">
    <meta name="author" content="traivan98">

    <title>شکار معما</title>

    <!-- favicon linke -->
    <link rel="icon" type="image/png" href="/firstpage/img/favicon.png" />

    <!-- ===============    Bootstrap core CSS     =============== -->
    <link rel="stylesheet" type="text/css" href="/bootstrap/bootstrap.min.css" media="all" />
    <!-- ===============    Bootstrap core CSS     =============== -->
    <link rel="stylesheet" type="text/css" href="/group/groupedit.css" media="all" />
</head>
<body>
<nav class="navbar navbar-inverse  " style="margin-bottom: 0;">
    <div class="container-fluid">
        <div class="navbar-header">
            <a class="navbar-brand" href="#">
                <img alt="Brand" src="/firstpage/img/logo.png" width="40px"height="40px">
            </a>
        </div>
        <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav navbar-right">
            </ul>
        </div>
    </div>
</nav>
    <div class="row">
        <div class="container">
            <div class="col-md-12" style="margin: 20px;background-color: #eeeeee;height: 400px;">
                <div class="row">
                    <div class="container">
                        <div class="col-md-9">
                            <h3>Group Name:</h3>
                                <h4><%=group.name%></h4>
                            <p>Score: <%= group.score%></p>
                            <p>Index: <%= group.index%></p>
                            <p>Stage: <%= group.competition.stage%></p>
                            Solved Problems:
                            <p style="width: 100%;">
                                <%group.competition.puzzles.forEach(function(puzzle){%>
                                    <%if(puzzle.solved){%>
                                        <a href="/admin/groups/<%=group._id%>/puzzles/<%=puzzle._id%>" style="text-decoration: none;"><%= puzzle.name%> -- </a>
                                <%}%>
                            <%});%>
                            </p>
                        </div>
                        <div class="col-md-3">
                            <div class="list-group">
                                <h3>Members</h3>
                                <%group.members.forEach(function (member) {%>
                                <li class="list-group-item "><a link="white" href="/admin/users/<%=member._id%>"><%=member.username%></a></li>
                                <%});%>
                                <form action="/admin/groups/<%=group._id%>/addUser" method="POST">
                                    <select class="form-control" type="text" name="username" placeholder="User">
                                        <%users.forEach(function (user) {%>
                                        <option value="<%=user.username%>"><%=user.username%></option>
                                        <%});%>
                                    </select>
                                    <button class="btn btn-lg btn-default btn-block" type="submit">Add Member</button>
                                </form>

                            </div>
                            <form  action="/admin/groups/<%=group._id%>?_method=DELETE" method="POST">
                                <button class="btn btn-default btn-lg  btn-danger btn-block">DELETE</button>
                            </form>
                            <a href="/admin/groups/" >
                                <button class="btn btn-lg btn-block " style="background-color: #00ab66;color: #E0E0E0">BACK</button>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>